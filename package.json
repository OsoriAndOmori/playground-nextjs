{
  "name": "playground-nextjs",
  "devDependencies": {
    "lerna": "^6.6.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npm install; lerna bootstrap --hoist;",
    "clean": "lerna clean",
    "api:dev": "npx lerna run --scope project-api dev",
    "api:start": "npx lerna run --scope project-api start",
    "api:build": "npx lerna run --scope project-api build",
    "guruto:dev": "npx lerna run --scope project-guruto dev",
    "guruto:start": "npx lerna run --scope project-guruto start",
    "guruto:build": "npx lerna run --scope project-guruto build"
  }
}
